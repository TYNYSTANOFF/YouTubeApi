<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="144dp"
        android:id="@+id/iv_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_200"
        android:layout_height="81dp"/>

    <TextView
        android:layout_width="144dp"
        android:textSize="16dp"
        android:id="@+id/tv_playlist"
        android:text="playlist"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/iv_preview"
        app:layout_constraintEnd_toEndOf="@id/iv_preview"
        android:gravity="center"
        android:background="@color/black_alpha70"
        app:layout_constraintBottom_toBottomOf="@id/iv_preview"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_video_name"
        android:maxLines="2"
        android:textSize="16dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_preview"
        app:layout_constraintTop_toTopOf="@id/iv_preview"
        android:layout_marginTop="8dp"
        android:text="Emotional Well-being 8 Healing"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_video_count"
        app:layout_constraintStart_toEndOf="@id/iv_preview"
        app:layout_constraintTop_toTopOf="@id/tv_playlist"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        android:text="19"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_video_count_text"
        app:layout_constraintStart_toEndOf="@id/tv_video_count"
        android:layout_marginStart="4dp"
    app:layout_constraintTop_toTopOf="@id/tv_playlist"
        android:textColor="@color/black"
        android:text="video series"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>